- provide(:title, 'Profile')
- model_class = User
%h1 Profile

.row-fluid
  %table.table
    %tbody
      %tr
        %th= model_class.human_attribute_name(:name) + ':'
        %td= @user.name
      %tr
        %th= model_class.human_attribute_name(:surname) + ':'
        %td= @user.surname
      %tr
        %th= model_class.human_attribute_name(:login) + ':'
        %td= @user.login
      %tr
        %th= model_class.human_attribute_name(:email) + ':'
        %td= @user.email
      %tr
        %th= 'Signed up:'
        %td= @user.created_at

.form_actions
  = link_to "Edit account", edit_user_registration_path(@user), class: 'btn'
  = link_to "Sharing", edit_share_user_path(@user), class: 'btn'
