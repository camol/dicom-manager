- if current_catalog
  .row-fluid
    .span12
      .path
        %ul.breadcrumb#path
          %li
          - if !current_catalog.is_root?
            - current_catalog.ancestors.all.each do |cat|
              %li
                = link_to cat.is_root? ? "root" : cat.name, cat
                %span.divider /
          %li.active
            = current_catalog.is_root? ? "root" : current_catalog.name
