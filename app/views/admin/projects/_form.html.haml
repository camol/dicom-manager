= simple_form_for [:admin, @project], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :description
  = f.association :groups, as: :check_boxes, label: "Assigned groups:"
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to "Cancel", admin_projects_path, :class => 'btn'


