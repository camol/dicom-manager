- provide(:title, 'Profile')
- model_class = User
%h1 Profile

.row-fluid
  %table.table.table-condensed.table-hover
    %tbody
      %tr
        %th= model_class.human_attribute_name(:name) + ':'
        %td= @user.name
      %tr
        %th= model_class.human_attribute_name(:surname) + ':'
        %td= @user.surname
      %tr
        %th= model_class.human_attribute_name(:login) + ':'
        %td= @user.login
      %tr
        %th= model_class.human_attribute_name(:admin) + ':'
        %td= @user.admin
      %tr
        %th= model_class.human_attribute_name(:enabled) + ':'
        %td= @user.enabled
      %tr
        %th= model_class.human_attribute_name(:sign_in_count) + ':'
        %td= @user.sign_in_count
      %tr
        %th= model_class.human_attribute_name(:last_sign_in_at) + ':'
        %td= @user.last_sign_in_at
      %tr
        %th= model_class.human_attribute_name(:last_sign_in_ip) + ':'
        %td= @user.last_sign_in_ip
      %tr
        %th= model_class.human_attribute_name(:created_at) + ':'
        %td= @user.created_at
      %tr
        %th= model_class.human_attribute_name(:updated_at) + ':'
        %td= @user.updated_at

.form_actions
  = link_to "Edit user", edit_admin_user_path(@user), class: 'btn'

