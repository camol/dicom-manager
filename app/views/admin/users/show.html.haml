- provide(:title, 'Profile')
- model_class = User
%h1 Profile

.row-fluid
  %table.table
    %tbody
      %tr
        %th= model_class.human_attribute_name(:name) + ':'
        %td= @user.name
      %tr
        %th= model_class.human_attribute_name(:surname) + ':'
        %td= @user.surname
      %tr
        %th= model_class.human_attribute_name(:login) + ':'
        %td= @user.login
      %tr
        %th= model_class.human_attribute_name(:admin) + ':'
        %td= @user.admin
      %tr
        %th= model_class.human_attribute_name(:roles) + ':'
        %td= @user.list_roles
      %tr
        %th= model_class.human_attribute_name(:enabled) + ':'
        %td= @user.enabled
      %tr
        %th= model_class.human_attribute_name(:sign_in_count) + ':'
        %td= @user.sign_in_count
      %tr
        %th= model_class.human_attribute_name(:last_sign_in_at) + ':'
        %td= @user.last_sign_in_at
      %tr
        %th= model_class.human_attribute_name(:last_sign_in_ip) + ':'
        %td= @user.last_sign_in_ip
      %tr
        %th= model_class.human_attribute_name(:created_at) + ':'
        %td= @user.created_at
      %tr
        %th= model_class.human_attribute_name(:updated_at) + ':'
        %td= @user.updated_at
      %tr
        %th Assigned to groups:
        %td
          - if @user.groups.any?
            - @user.groups.each do |g|
              = link_to g.name, group_path(g)
              ,
          - else
            No groups
      %tr
        %th Assigned to projects:
        %td
          - if @user.projects.to_a.any?
            - @user.projects.each do |p|
              = link_to p.name, project_path(p)
              ,
          - else
            No projects

.form_actions
  = link_to "Edit user", edit_admin_user_path(@user), class: 'btn'

