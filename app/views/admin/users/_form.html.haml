= simple_form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :surname
  = f.input :admin
  = f.input :enabled
  = f.input :email
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to "Cancel", admin_users_path, :class => 'btn'

