= simple_form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :surname
  = f.input :login
  = f.input :email
  = f.input :admin
  = f.input :enabled
  = f.association :groups, as: :check_boxes, label: "Assigned to groups:"
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to "Cancel", admin_users_path, :class => 'btn'

