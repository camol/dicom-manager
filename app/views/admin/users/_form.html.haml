.container-fluid
  = simple_form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f|
    .row-fluid
      .span6
        = f.input :name
        = f.input :surname
        = f.input :login
        = f.input :email
        = f.input :admin, wrapper_html: { class: 'checkbox' }
        = f.input :enabled, wrapper_html: { class: 'checkbox' }
        = f.button :submit, :class => 'btn-primary'
        = link_to "Cancel", admin_users_path, :class => 'btn'
      .span6
        = f.association :groups, as: :check_boxes, label: "Assigned to groups:", wrapper_html: { class: 'my-checkboxes' }

